{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "allowJs": true,
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2019", "dom"],
    "rootDir": "src"
  },
  "include": ["src/**/*.js", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
